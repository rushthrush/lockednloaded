@model LockedNLoaded.Models.Place

<h3>Place</h3>
<form method="post" action="/Places/Delete/@Model.Id"
      id="deleteForm">
    @Html.AntiForgeryToken()
    <div class="btn-group">
        <a href="/Places/Edit/@Model.Id"
           class="btn btn-primary btn-sm">
            <i class="glyphicon glyphicon-edit"></i>
            Edit place
        </a>
        <button id="submit" type="submit" class="btn btn-danger btn-sm">
            <i class="glyphicon glyphicon-trash"></i>
            Delete place
        </button>
    </div>
</form>

<div class="media">
    <div class="media-left">
        <img class="place-image"
             src="@(!String.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl :
                 "http://maps.googleapis.com/maps/api/staticmap?center=" + Model.Coordinates.Latitude + "," + Model.Coordinates.Longitude + "&zoom=10&size=100x100&sensor=false&key=AIzaSyDO3iYZcZSxJo726LMjdNdPDyeWIlDfFEc"
                 )">
    </div>
    <div class="media-body">
        <h4 class="place-title">
            @Model.LocationName Rating:@Model.UserRating<br />
            <small>@(Model.Coordinates != null ? Model.Coordinates.ToString() : "unknown")</small>
        </h4>
        <h5 class="place-author">
            By @(String.IsNullOrEmpty(Model.CreatedBy.Name) ?
        "Unknown" : Model.CreatedBy.Name)
        </h5>
        <p class="place-description">@Model.Description</p>
    </div>
</div>